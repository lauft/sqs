PREFIX=@prefix@
BINDIR=@bindir@
VARDIR=@vardir@

FILES=sqs \
      sqscommon \
      sqsdispatch \
      $(filter-out $(wildcard sqs-*~), $(wildcard sqs-*)) \
      sqsrunner \
      sqslock \
      sqsunlock \
      sqstest

SQSFILES=$(addprefix $(BINDIR)/,$(FILES))

SETUP=sqscommon

.PHONY: test

default: $(SETUP)
	@echo "Run 'make install' to install SQS"

install: $(BINDIR) $(VARDIR) $(SQSFILES)

$(SETUP): Makefile.in sqscommon.in
	@echo "Re-Running 'configure'..."
	@cat config.status 2>/dev/null | xargs ./configure --quiet

$(BINDIR) $(VARDIR):
	@mkdir -p $(VARDIR)
	@mkdir -p $(BINDIR)

$(BINDIR)/sqscommon: sqscommon
	@cp -v $< $@
	@chmod 644 $@	

$(BINDIR)/%: %
	@cp -v $< $@	
	@chmod 755 $@	

uninstall:
	@rm -fv $(BINDIR)/sqs*
	@rm -rfv $(VARDIR)

clean:
	@rm -f Makefile
	@rm -f sqscommon

test:
	@cd test; \
	bin/behat

