PREFIX=@prefix@
BINDIR=@bindir@
VARDIR=@vardir@

FILES=sqsrunner \
      sqslock \
      sqsunlock \
      sqsgetopt \
      sqsupdate \
      sqsadmin

SQSFILES=$(addprefix $(BINDIR)/,$(FILES))

SETUP=sqsconfig

default: $(SETUP)
	@echo "Run 'make install' to install SQS"

install: $(BINDIR) $(VARDIR) $(SQSFILES)

$(SETUP): Makefile.in sqsconfig.in
	@echo "Re-Running 'configure'..."
	@cat config.status 2>/dev/null | xargs ./configure --no-create

$(BINDIR) $(VARDIR):
	@mkdir -p $(VARDIR)
	@mkdir -p $(BINDIR)

$(BINDIR)/%: %
	@cp -v $< $@	
	@chmod 754 $@	

clean:
	@rm -f Makefile
	@rm -f sqsconfig
