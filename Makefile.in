PREFIX=@prefix@
BINDIR=@bindir@
VARDIR=@vardir@

default:
	@echo "Run 'configure' and then 'make install'"

install:
	@mkdir -p $(VARDIR)
	@mkdir -p $(BINDIR)
	@cp sqs        $(BINDIR)/.	
	@cp sqsrunner  $(BINDIR)/.
	@cp sqslock    $(BINDIR)/.
	@cp sqsunlock  $(BINDIR)/.
	@cp sqsconfig  $(BINDIR)/.
	@cp sqsadmin   $(BINDIR)/.
	@chmod 754 $(BINDIR)/sqs	
	@chmod 754 $(BINDIR)/sqsrunner
	@chmod 754 $(BINDIR)/sqslock
	@chmod 754 $(BINDIR)/sqsunlock
	@chmod 754 $(BINDIR)/sqsadmin

clean:
	@rm -f Makefile
	@rm -f sqsconfig
